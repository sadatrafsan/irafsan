<div class="row">
    <div class="summary col-md-12">
        <div class="page-header">
            <h2>My Works</h2>
        </div>
        <% portfolio.forEach(function(item){ %>
            <% if(page === 'description'){ %>
            <div class="panel panel-success">
            <% }else{ %>
            <div class="panel panel-primary">
            <% } %>
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <%= item.name %>
                        <span class="small"> with
                            <a href="/portfolio/<%= item.tag %>"><%= item.technology %></a>
                        </span>
                    </h3>
                </div>
                <div class="panel-body">
                    <p>
                        <% if(page != 'home'){ %>
                            <% if(page === 'description'){ %>
                                <%- item.description %>
                            <ul class="list-group">
                                <% for(var i=0; i<item.projects.length; i++){ %>
                                <li class="list-group-item"><%= item.projects[i] %></li>
                                <% } %>
                            </ul>
                            <%
                            }
                            else{
                            %>
                                <%- item.summary %>
                            <%
                            }
                        } %>
                    </p>
                </div>
                <div class="panel-footer">
                    Notes: <%= item.note %>
                </div>
            </div>
        <% }); %>
        </div>
    </div>
</div>